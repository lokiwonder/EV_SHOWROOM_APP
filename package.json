{
  "name": "electron_showroom",
  "private": true,
  "version": "0.0.0",
  "author": "Wondermove",
  "main": "dist/electron/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "cross-env BROWSER=none yarn dev && yarn electron",
    "electron:builder": "electron-builder",
    "build:for:electron": "tsc --noEmit && cross-env ELECTRON=true vite build",
    "app:build": "tsc --noEmit && vite build && electron-builder",
    "app:build:win": "tsc --noEmit && vite build && electron-builder --win --x64"
  },
  "dependencies": {
    "@types/ramda": "^0.28.14",
    "@types/react-router": "^5.1.9",
    "@types/react-router-dom": "^5.1.7",
    "@types/uuid": "^8.3.4",
    "axios": "^0.27.2",
    "blob": "^0.1.0",
    "cross-env": "^7.0.3",
    "eslint-import-resolver-babel-module": "^5.3.1",
    "eslint-plugin-import": "^2.26.0",
    "file-saver": "^2.0.5",
    "http-proxy-middleware": "^2.0.6",
    "jszip": "^3.10.0",
    "path": "^0.12.7",
    "ramda": "^0.28.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.3.0",
    "simple-zustand-devtools": "^1.0.1",
    "tailwindcss": "^3.0.24",
    "uuid": "^8.3.2",
    "vite-plugin-electron": "^0.4.8",
    "wait-on": "^6.0.1",
    "zustand": "^3.5.1"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.5",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^1.3.0",
    "electron": "^19.0.4",
    "electron-builder": "^23.0.3",
    "typescript": "^4.6.3",
    "vite": "^2.9.9"
  },
  "build": {
    "appId": "com.my-website.my-app",
    "productName": "EV Showroom",
    "copyright": "Copyright Â© 2022 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "dist_electron"
    }
  }
}